<nav class="tabs">
    {{#each this.tabs as |tab|}}
        <a 
            class="{{tab.cssClass}} system-tab secondary-container primary-text-container" 
            data-action="tab" 
            data-group="{{tab.group}}" 
            data-tab="{{tab.id}}"
        >
            <i class="{{tab.icon}}"></i>
            <label>{{tab.label}}</label>
        </a>
    {{/each}}
</nav>